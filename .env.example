# Database Configuration
MONGODB_URI=your_actual_mongodb_connection_string
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/gym-app-test

# JWT Configuration
JWT_SECRET=your_actual_jwt_secret_key
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_actual_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password (not your regular password)
EMAIL_FROM=noreply@gymapp.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Production Configuration (for later)
SSL_KEY_PATH=
SSL_CERT_PATH=
AWS_ACCESS_KEY_ID=your_actual_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_actual_aws_secret_key_here
AWS_REGION=us-east-1 (this is already set)
AWS_S3_BUCKET=gym-app-uploads (this is already set)